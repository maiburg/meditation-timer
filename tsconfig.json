{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["ES2017", "DOM"],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@features/*": ["app/features/*"],
      "@src/*": ["../src/*"],
      "nativescript-internal-plugin": ["../nativescript-internal-plugin"],
      "nativescript-internal-plugin/*": ["../nativescript-internal-plugin/*"]
    },
    "removeComments": false
  },
  "angularCompilerOptions": {
    "strictTemplates": false,
    "strictInjectionParameters": true
  },
  "include": ["../nativescript-internal-plugin/**/*.ts", "src/**/*.ios.ts", "src/**/*.android.ts"],
  "files": ["./src/main.ts", "./references.d.ts", "./src/polyfills.ts"],
  "exclude": ["node_modules", "platforms", "e2e", "../nativescript-internal-plugin/**/*.spec.ts"],
  "references": [
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
